<h1>タスク管理アプリ</h1>
<% if logged_in? %>
  <p>ログイン完了ユーザ：<%= current_user.name %></p>
<%# else %>
<%#= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
<% end %>


<h1>タスク一覧</h1>


<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.id, task %> : <%= task.status %> &gt; <%= task.content %></li>
  <% end %>
</ul>

<%= link_to '新規タスクの投稿', new_task_path %>

<h2>ログアウト</h2>
<%= link_to 'Logout', logout_path, method: :delete, class: 'nav-link' %>