<h1>タスク管理アプリ</h1>

<h2>ログイン</h2>

<%= form_with(url: login_path, scope: :session) do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.submit "Log in" %>
<% end %>

<h2>ユーザ登録</h2>

<%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>